@model IEnumerable<CompetitiveRankingWeb.Models.Playthrough>

@{
    ViewBag.Title = "Playthroughs";
}

<h2>Playthroughs</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Game.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Platform.Name)</th>
            <th>Completed Date</th>
            <th>@Html.DisplayNameFor(model => model.Time)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(r => r.CompletedDate))
        {
            <tr>
                <td>@Html.ActionLink(item.Game.Name, "Details", new { id = item.PlaythroughID })</td>
                <td>@Html.DisplayFor(modelItem => item.Platform.Name)</td>
                <td>@item.CompletedDate.Value.Date.ToLongDateString()</td>
                <td>@Html.DisplayFor(modelItem => item.Time)</td>
            </tr>
        }
    </tbody>
</table>
