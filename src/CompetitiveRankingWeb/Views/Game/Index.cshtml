@model List<Tuple<int, List<CompetitiveRankingWeb.Models.Game>>>

@{
    ViewBag.Title = "Games";
}

<h2>Games</h2>

<p class="pull-right">
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-success" })
</p>


@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-12">
            <h3>@item.Item1</h3>
            @Html.Partial("_Games", @item.Item2)
        </div>
    </div>
}