@model IEnumerable<CompetitiveRankingWeb.Models.Game>

<table class="table table-striped">
    <colgroup>
        <col span="1" style="width: 40%;">
        <col span="1" style="width: 20%;">
        <col span="1" style="width: 20%;">
        <col span="1" style="width: 20%;">
    </colgroup>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Publisher)</th>
            <th>@Html.DisplayNameFor(model => model.Developer)</th>
            <th>Release Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.Name, "Details", new { id = item.GameID })</td>
                <td>@Html.DisplayFor(modelItem => item.Publisher.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Developer.Name)</td>
                <td>@item.ReleaseDate.Value.Date.ToLongDateString()</td>
            </tr>
        }
    </tbody>
</table>
